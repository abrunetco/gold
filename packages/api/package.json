{
  "name": "@gold/api",
  "description": "",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Ali Ghorbani"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 18.19.1"
  },
  "feathers": {
    "language": "ts",
    "packager": "yarn",
    "database": "mongodb",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "lib/client.js",
    "lib/**/*.d.ts",
    "lib/**/*.shared.js",
    "lib/**/shared.js"
  ],
  "main": "lib/client",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "bun --watch lib/index.js",
    "migrate": "bun src/migrate.ts",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.30",
    "@feathersjs/authentication": "^5.0.30",
    "@feathersjs/authentication-client": "^5.0.30",
    "@feathersjs/authentication-local": "^5.0.30",
    "@feathersjs/authentication-oauth": "^5.0.30",
    "@feathersjs/configuration": "^5.0.30",
    "@feathersjs/errors": "^5.0.30",
    "@feathersjs/feathers": "^5.0.30",
    "@feathersjs/koa": "^5.0.30",
    "@feathersjs/mongodb": "^5.0.30",
    "@feathersjs/schema": "^5.0.30",
    "@feathersjs/socketio": "^5.0.30",
    "@feathersjs/transport-commons": "^5.0.30",
    "@feathersjs/typebox": "^5.0.30",
    "migrate-mongo": "^11.0.0",
    "mongodb": "^6.8.0",
    "uid": "^2.0.2",
    "moment-jalaali": "^0.10.0",
    "winston": "^3.14.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.26.8",
    "moment-jalaali": "^0.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@faker-js/faker": "^9.0.0",
    "@types/migrate-mongo": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "shx": "^0.3.4",
    "typescript-eslint": "^8.5.0"
  }
}