{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules",
    "node_modules/*",
    "../../node_modules",
    "../../node_modules/*"
  ]
}